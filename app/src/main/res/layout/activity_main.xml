<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/box1"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="100sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/box2"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter2"
        app:layout_constraintStart_toEndOf="@id/box1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/box3"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter3"
        app:layout_constraintStart_toEndOf="@id/box2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/box4"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box1" />

    <EditText
        android:id="@+id/box5"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter5"
        app:layout_constraintStart_toEndOf="@id/box4"
        app:layout_constraintTop_toBottomOf="@id/box2" />

    <EditText
        android:id="@+id/box6"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter6"
        app:layout_constraintStart_toEndOf="@id/box5"
        app:layout_constraintTop_toBottomOf="@id/box3" />

    <EditText
        android:id="@+id/box7"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box4" />

    <EditText
        android:id="@+id/box8"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter8"
        app:layout_constraintStart_toEndOf="@id/box7"
        app:layout_constraintTop_toBottomOf="@id/box5" />

    <EditText
        android:id="@+id/box9"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:ems="10"
        android:inputType="numberSigned"
        android:autofillHints=""
        android:hint="@string/enter9"
        app:layout_constraintStart_toEndOf="@id/box8"
        app:layout_constraintTop_toBottomOf="@id/box6" />
</androidx.constraintlayout.widget.ConstraintLayout>